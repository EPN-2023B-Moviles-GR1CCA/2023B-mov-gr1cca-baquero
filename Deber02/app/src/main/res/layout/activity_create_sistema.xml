<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_create_album"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deber02.CreateSistemaActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Sistema Solar"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <EditText
        android:id="@+id/input_id_sistema"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Ingrese el id"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_sistema"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_sistema"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.104" />

    <EditText
        android:id="@+id/input_nombre_sistema"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Ingrese el nombre"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_descripcion_sistema"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_descripcion_sistema"
        app:layout_constraintTop_toBottomOf="@+id/input_id_sistema"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/input_descripcion_sistema"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Ingrese la descripcion"
        android:inputType="text|textShortMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_satelites_sistema"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_satelites_sistema"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_sistema"
        app:layout_constraintVertical_bias="0.043" />

    <EditText
        android:id="@+id/input_satelites_sistema"
        android:layout_width="273dp"
        android:layout_height="53dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:hint="Cantidad de satelites"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="69dp" />

    <Button
        android:id="@+id/btn_crear_sistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFA500"
        android:text="Crear"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back_create_sistema"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back_create_sistema"
        app:layout_constraintVertical_bias="0.85" />

    <Button
        android:id="@+id/btn_back_create_sistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#FFA500"
        android:text="Cancelar"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toEndOf="@+id/btn_crear_sistema" />

</androidx.constraintlayout.widget.ConstraintLayout>