<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerSistemas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextNombrePlaneta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/editTextDescripcionPlaneta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextPosicionPlaneta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Posicion"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBoxTieneVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiene Vida" />

    <Button
        android:id="@+id/buttonAgregarPlaneta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onAgregarComputadoraClick"
        android:text="Agregar Planeta" />
</LinearLayout>