<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/btnAddSistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Sistema" />

    <Button
        android:id="@+id/btnReadSistemas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Sistemas" />

    <Button
        android:id="@+id/btnDeleteSistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Sistema" />

    <Button
        android:id="@+id/btnUpdateSistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Sistema" />

</LinearLayout>