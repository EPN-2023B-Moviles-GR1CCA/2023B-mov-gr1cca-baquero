<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/btnAddPlaneta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Planeta" />

    <Button
        android:id="@+id/btnReadPlanetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Planetas" />

    <Button
        android:id="@+id/btnDeletePlaneta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Planeta" />

    <Button
        android:id="@+id/btnUpdatePlaneta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar Planeta" />

</LinearLayout>