<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextNombreSistema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del sistema" />

    <EditText
        android:id="@+id/editTextDescripcionSistema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion" />

    <EditText
        android:id="@+id/editTextSatelites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad de SatÃ©lites"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonAgregarSistema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Sistema" />
</LinearLayout>