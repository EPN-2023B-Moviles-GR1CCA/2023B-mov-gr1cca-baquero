<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crud_sistema_solar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudSistemaSolar">

    <EditText
        android:id="@+id/input_id_sistema_solar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre_sistema_solar"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_sistema_solar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_sistema_solar" />

    <EditText
        android:id="@+id/input_nombre_sistema_solar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_descripcion_sistema_solar"
        app:layout_constraintEnd_toEndOf="@+id/input_descripcion_sistema_solar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_descripcion_sistema_solar" />

    <EditText
        android:id="@+id/input_descripcion_sistema_solar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_cantidad_sistema_solar"
        app:layout_constraintEnd_toEndOf="@+id/input_cantidad_sistema_solar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_cantidad_sistema_solar" />

    <EditText
        android:id="@+id/input_cantidad_sistema_solar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Cantidad SatÃ©lites"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardar_sistema_solar"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardar_sistema_solar"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/btn_guardar_sistema_solar" />

    <Button
        android:id="@+id/btn_guardar_sistema_solar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557" />
</androidx.constraintlayout.widget.ConstraintLayout>